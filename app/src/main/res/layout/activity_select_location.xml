<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"

    android:layout_height="match_parent"
    tools:context=".selectLocation">


    <LinearLayout
        android:id="@+id/outerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical">

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_enter_location"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/txt_location2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_rem_title"
        android:textSize="20sp"
       />


    <EditText
        android:id="@+id/et_rem"
        android:layout_width="284dp"
        android:layout_height="46dp"
        android:hint="Pick up medicines"
        />
    <Button
        android:id="@+id/location_button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:text="Choose Location" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
       />
    </LinearLayout>
    </RelativeLayout>

